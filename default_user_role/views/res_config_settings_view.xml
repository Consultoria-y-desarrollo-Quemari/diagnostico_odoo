<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="add_role_id_inherit_res_config_settings" model="ir.ui.view">
        <field name="name">add.role.id.inherit.res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="role_id" string="Rol por defecto nuevos usuarios" />
                            <field name="role_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>