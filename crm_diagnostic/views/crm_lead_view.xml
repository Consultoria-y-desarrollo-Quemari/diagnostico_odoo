<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="crm.crm_lead_action_pipeline" model="ir.actions.act_window">
        <field name="name">Pipeline_gavii</field>
        <field name="res_model">crm.lead</field>
            <field name="view_mode">kanban,tree,graph,pivot,form,calendar,activity</field>
            <field name="domain">
                [('team_id','=', generate_domain)]
            </field>
            <field name="context">{
                    'default_type': 'opportunity',
                    'search_default_assigned_to_me': 1
            }</field>
            <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
    </record>

    
    <record id="motivo_cierre_action" model="ir.actions.act_window">
            <field name="name">Motivo del cierre</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.lead.motivoscirre.wizard</field>
            <field name="view_mode">form</field>

            <field name="target">new</field>
        </record>
    <!-- inherit crm.lead from crm -->
    <record id="iuv_crm_diagnostic_lead_form_view" model="ir.ui.view">
        <field name="name">iuv_crm_diagnostic_lead_form_view</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/div/button[@name='action_schedule_meeting']" position="before">
                <button name="action_crm_diagnostic_view" type="object" icon="fa-file-text-o" class="oe_stat_button">
                    <span class="o_stat_text"> Realizar Diagnostico </span>
                </button>
                <button name="call_action_crm_attention_plan" type="object" icon="fa-check-square-o" class="oe_stat_button">
                    <span class="o_stat_text">Plan de atención</span>
                </button>
            </xpath>
            <!--298-->
            <xpath expr="//button[@name='161']" position="replace">
                <button name="%(motivo_cierre_action)d" type="action" class="oe_highlight" string="Inactivar Caso" context="{'default_lead':id}" />
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="current_user" invisible="1" />
                <field name="root_current_user" invisible="1" />
                <field name="current_user_facilitator" invisible="1" />
                <field name="current_user_mentor" invisible="1" />
                <field name="current_user_admin" invisible="1" />
                <field name="first_module_ready" invisible="1" />
                <field name="second_module_read" invisible="1" />
                <field name="third_module_ready" invisible="1" />
                <field name="four_module_read" invisible="1" />
                <field name="mentorias" invisible="1"/>
                <field name="modulo_seguimeinto" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="mentors" options="{}" attrs="{'readonly': [('current_user_admin', '=', False)]}" />
                <field name="motivos_cierre" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="coordinador" />
                <field name="social_plan" string="¿Socializacion del plan de atención?" />
            </xpath>
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="attributes">
                <attribute name="attrs">{'invisible': ['|','|', '|', ('active','=',False), ('probability', '=', 100), ('type', '=', 'lead'), ('show_action_set_rainbowman', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="after">
                <field name="social_plan" invisible="1" />
                <field name="social_plan_1" invisible="1" />
                <field name="task_number" invisible="1" />
                <field name="show_action_set_rainbowman" invisible="1" />
                <button type="object" name="confirm_social_plan" string="Confirmar socializacion del plan de atención" attrs="{'invisible':[('social_plan_1','=',False)]}" />
            </xpath>
            <xpath expr="//page[@name='modulo3']" position="after">
                <page string="MODULO DE SEGUIMIENTO" name="modulo4" attrs="{'invisible': [('root_current_user', '=', False),('modulo_seguimeinto', '=', False)]}">
                    
                        <div class="oe_title text-center">
                            <h3>
                                <span>Atención Especial</span>
                            </h3>
                        </div>
                        <field name="plan_line_ids" mode="tree">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="prioridad" readonly="1" />
                                <field name="actividades" readonly="1" />
                                <field name="entidad_ofertadores" readonly="1"/>
                                <field name="soluciones" readonly="1" />
                                <field name="reponsable" readonly="1" />
                                <field name="estado_actividad" attrs="{'required':True}" options="{'no_create': True, 'no_create_edit':True}" />
                                <field name="kanban_state_attention_plan" widget="kanban_state_selection" attrs="{'required':True}" />
                                <field name="adjunto" attrs="{'readonly':[('estado_actividad','!=','completada')]}" />
                                <field name="fecha_kanban" invisible="1" />
                            </tree>
                        </field>
                        <div class="oe_title text-center">
                            <h3>
                                <span>Bitacora</span>
                            </h3>
                        </div>
                        <field name="bitacora_ids" mode="tree">
                            <tree editable="bottom" create="1" delete="0">
                                <field name="fecha" attrs="{'required':True}" />
                                <field name="facilitador_ids1" attrs="{'required':True}" />
                                <field name="actividad1" attrs="{'required':True}" />
                                <field name="tipo_actividad_ids" attrs="{'required':True}" widget='selection'/>
                                <field name="registro_avance" attrs="{'required':True}" />
                                <field name="observaciones" attrs="{'required':True}" />
                                <field name="adjunto" />
                            </tree>
                        </field>
                    
                </page>
                 <page string="MENTORIAS" id="timesheets_tab" attrs="{'invisible' : [('mentorias', '=', False)]}">
                        <group>
                            <group>
                                <field name="planned_hours" widget="float_time"/>
                                    <label for="subtask_planned_hours" groups="project.group_subtask_project" />
                                    <div class="o_row" groups="project.group_subtask_project">
                                        <field name="subtask_planned_hours" widget="float_time"/><span> planned hours</span>
                                    </div>
                            </group>
                            <group>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>
                        <group name="timesheet_error" invisible="1">
                            <div class="alert alert-warning" role="alert">
                                You can not log timesheets on this project since is linked to an inactive analytic account. Please change it, or reactivate the current one to timesheet on the project.
                            </div>
                        </group>
                    <field name="timesheet_ids" mode="tree,kanban"  attrs="{'readonly' : [('current_user_mentor', '=', False)]}">
                        <tree editable="bottom" string="Timesheet Activities" default_order="date">
                            <field name="date"/>
                            <field name="user_id" invisible="1"/>
                            <field name="employee_id" required="1"/>
                            <field name="name"/>
                            <field name="stage_state"/>
                            <field name="unit_amount" widget="timesheet_uom"/>
                            <field name="adjunto"/>
                            <field name="project_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                        <kanban class="o_kanban_mobile">
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="employee_id"/>
                            <field name="name"/>
                            <field name="unit_amount"/>
                            <field name="project_id"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                        <div class="row">
                                            <div class="col-6">
                                                <strong><span><t t-esc="record.employee_id.value"/></span></strong>
                                            </div>
                                            <div class="col-6 pull-right text-right">
                                                <strong><t t-esc="record.date.value"/></strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 text-muted">
                                                <span><t t-esc="record.name.value"/></span>
                                            </div>
                                            <div class="col-6">
                                                <span class="pull-right text-right">
                                                    <field name="unit_amount" widget="float_time"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                        <form  string="Timesheet Activities">
                            <sheet>
                                 <group>
                                    <field name="date"/>
                                    <field name="user_id" invisible="1"/>
                                    <field name="employee_id" required="1"/>
                                    <field name="name"/>
                                    <field name="unit_amount" string="Duration" widget="float_time"/>
                                    <field name="adjunto"/>
                                    <field name="project_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                    <group >
                        <group class="oe_subtotal_footer oe_right" name="project_hours">
                            <field name="effective_hours" widget="float_time" />
                            <field name="subtask_effective_hours" widget="float_time" attrs="{'invisible' : [('subtask_effective_hours', '=', 0.0)]}" />
                            <field name="total_hours_spent" widget="float_time" class="oe_subtotal_footer_separator" attrs="{'invisible' : [('subtask_effective_hours', '=', 0.0)]}" />
                            <field name="remaining_hours" widget="float_time" class="oe_subtotal_footer_separator" attrs="{'invisible' : [('planned_hours', '=', 0.0)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <!-- inherit crm.stage from crm-->
    <record id="q_inherit_crm_stage_form_view" model="ir.ui.view">
        <field name="name">q.inherit.crm.stage.form.view</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_won']" position="before">
                <field name="stage_state" />
                <field name="allow_mark_as_won" />
            </xpath>
            <xpath expr="//field[@name='allow_mark_as_won']" position="before">
                <field name="stage_after_confirm_social_plan" />
            </xpath>
            <xpath expr="//field[@name='is_won']" position="attributes">
                <attribute name="attrs">{'invisible': [('allow_mark_as_won', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <!-- inherit crm.lead from crm_uni_forms-->
    <record id="q_inherit_crm_case_form_view_oppor_inherit_product" model="ir.ui.view">
        <field name="name">q.inherit.crm.case.form.view.oppor.inherit.product</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm_uni_forms.crm_case_form_view_oppor_inherit_product" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='modulo2']" position="attributes">
                <attribute name="attrs">{'invisible': [('root_current_user', '=', False),('first_module_ready', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//page[@name='modulo3']" position="attributes">
                <attribute name="attrs">{'invisible': [('root_current_user', '=', False),('second_module_read', '=', False)]}</attribute>
            </xpath>
            
        </field>
    </record>

   </data>
</odoo>
