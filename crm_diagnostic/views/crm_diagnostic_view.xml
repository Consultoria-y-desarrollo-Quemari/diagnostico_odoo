<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record  model="ir.ui.view" id="crm_diagnostic_view">
            <field name="name">crm_diagnostic_view</field>
            <field name="model">crm.diagnostic</field>
            <field name="arch" type="xml">
                <form string="CRM Diagnostic">
                    <header>
                        <!-- <field name="status" widget="statusbar" statusbar_visible="draft,start,done,cancel"/> -->
                    </header>
                    <sheet>
                        <!-- <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div> -->
                        <group>
                            <div>
                                <!-- <group> -->
                                    <!-- <field name="lead_id" string="Order type" readonly='1'/> -->
                                <div>
                                    <group name="left data">
                                        <field name="lead_id"/>
                                        <field name="nombre_negocio" string="Nombre del Negocio" />
                                        <field name="nombre_propietario" string="Nombre del Propietario" />
                                        <field name="tipo_documento" string="Tipo de documento" />
                                        <field name="ubicacion" string="Ubicacion" />
                                    </group>
                                </div>
                                <!-- </group> -->
                            </div>
                            <div>
                                <div>
                                    <group name="center_right">
                                        <field name="valoracion_micronegocio" string="Valoracion del Micronegocio"/>
                                        <field name="fecha" string="Fecha"/>
                                    </group>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <group name="center_data">
                                        <field name="actividad_micronegocio" string="Actividad del micronegocio"/>
                                        <field name="tipo_micronegocio" string="Tipo de micronegocio"/>
                                        <field name="numero_identificacion" string="Numero de indentificacion"/>
                                        <field name="codigo_formulario" string="Codigo del formulario"/>
                                    </group>
                                </div>
                            </div>
                            <!-- <div>
                            </div> -->
                        </group>
                        <group>
                            <div>
                                <group>
                                    <field name="diagnostico"/>
                                </group>
                            </div>
                        </group>
                        <notebook>
                            <page string="Líneas de diagnostico" name="diagnostic_line_page">
                                <field name="crm_diagnostic_line_ids" widget="section_and_note_one2many" mode="tree">
                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_line_control" string="Agregar una línea"/>
                                            <create name="add_section_control" string="Agregar una sección" context="{'default_display_type': 'line_section'}"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="display_type" force_save="1" invisible="1"/>
                                        <field name="name" widget="section_and_note_text"/>
                                        <field name="respuesta"/>
                                        <field name="puntaje"/>
                                        <field name="area"/>
                                        <field name="sugerencia"/>
                                        <field name="valoracion"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
